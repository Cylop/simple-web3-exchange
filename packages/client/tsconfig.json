{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "lib": ["dom", "es6", "ESNext"],
    "sourceMap": true,
    "strict": true,
    "paths": {
      "@pages/*": ["./pages/*"],
      "@services/*": ["./services/*"],
      "~/*": ["./*"]
    },
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "plugins": ["parcel-plugin-typescript"]
}
