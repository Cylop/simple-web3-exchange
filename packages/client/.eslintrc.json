{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": "./tsconfig.json",
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "extends": [
    "../../.eslintrc.json",
    "airbnb-typescript"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off"
  },
  "plugins": ["react", "react-hooks"]
}
